        </tr>
      </thead>

        <tbody>
        <tr>
          <% @licences.each do | licence| %>
            <td> <%= licence.pilote_id  %> </td>

            <td> <%= licence.event_id %> </td>
            <td> <%= licence.penalite %> </td>
