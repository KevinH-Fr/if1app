        <% end %>
      </tbody>
    </table>




  <% if current_user.admin? %>
   <%= link_to "Nouvelle licence", new_licence_path, class:"btn btn-primary" %>
    <br>

  <% end %>

<% else %>

  <h3> Vous n'avez pas les droits...</h3>
  
<% end %>

