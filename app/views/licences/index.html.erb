              <%= button_to '', licence, class:"fa-solid fa-trash-can btn btn-danger", method: :delete, :onclick => "return confirm('Sûr ?')" %>
            </td> 
            <td>
              <%= link_to "", edit_licence_path(licence), class:"fa-regular fa-pen-to-square btn btn-secondary" %> 
