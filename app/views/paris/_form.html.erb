<%= form_with(model: pari) do |form| %>
  <% if pari.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(pari.errors.count, "error") %> prohibited this pari from being saved:</h2>

      <ul>
        <% pari.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div>
    <%= form.label :event, style: "display: block" %>
    <%= form.select(:event_id, options_from_collection_for_select(
                  @event,'id', 'date', 
                 :selected => form.object.event_id), 
                 :include_blank => true )%>
  </div>

   <div>
    <%= form.label :pilote, style: "display: block" %>
    <%= form.select(:pilote_id, options_from_collection_for_select(
                  @pilote,'id', 'nom', 
                 :selected => form.object.pilote_id), 
                 :include_blank => true )%>
  </div>

  <div>
    <%= form.label :type, style: "display: block" %>
    <%= form.text_field :type %>
  </div>

  <div>
    <%= form.label :montant, style: "display: block" %>
    <%= form.number_field :montant %>
  </div>

  <div>
    <%= form.label :cote, style: "display: block" %>
    <%= form.text_field :cote %>
  </div>

  <div>
    <%= form.label :resultat, style: "display: block" %>
    <%= form.check_box :resultat %>
  </div>

  <div>
    <%= form.label :solde, style: "display: block" %>
    <%= form.number_field :solde %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
