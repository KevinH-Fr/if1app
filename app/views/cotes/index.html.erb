
<% if user_signed_in? %>
  <h1>Cotes Paris</h1>  <br/>

  <%= render "shared/choixevent" %>

  <% if (@eventId).present? %> 
    <%= render "shared/eventactif" %>
    
    <%= link_to "Calculs cotes", toggle_calculcotes_cote_path(@eventId), class:"btn btn-success", style:"margin: 2px" %>
    <br><br>

    <%#= tableau data cotes %>
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th style="text-align: center;">#</th>
          <th>Pilote</th>
          <th style="text-align: center;">victoire</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <% @calculs_cotes.each_with_index do | resultat, i| %>
            <td style="text-align: center;">
                <strong>  
                  <%= (i+1) %>
                </strong> 
            </td>
            <td>
              <%#= (resultat[0]) %> 
              <%= Pilote.find(resultat.pilote_id).nom %>

            </td>
            <td style="text-align: center;">
             
             <%#= (resultat[1]) %> 

              <%#= @valDepuisModel %>

                <% pointsPilote = resultat.total %>
                <% pointsMax = @testmaxScore[1] %>
                <%# coteVictoire =  pointsPilote  %>
               
                <%=  number_with_precision(1.11 + ((i+(i*1.13) * ( (pointsMax - pointsPilote)/4))), precision: 2) %>
                 <%#=  number_with_precision(resultat.total, precision: 2) %>
            
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  <br/> <hr/>
        
    <%# PDF event actif %>
    <% numGp = Event.find(@eventId).numero %>
    <%= link_to "PDF",  cotes_path(saisonId: @saisonId, divisionId: @divisionId, eventId: @eventId, numGp: numGp, format: :pdf), class:"btn btn-dark" %>

   <% end %>

<% else %>
  <br/>   <strong>Vous n'avez pas les droits...</strong>
<% end %>

