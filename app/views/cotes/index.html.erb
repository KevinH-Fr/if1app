
<% if user_signed_in? %>
  <h1>Cotes Paris</h1>  <br/>

  <%= render "shared/choixevent" %>

  <% if (@eventId).present? %> 
    <%= render "shared/eventactif" %>
    
    <%#= tableau data cotes %>
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th style="text-align: center;">#</th>
          <th>Pilote</th>
          <th style="text-align: center;">victoire</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <% @resultatsFiltres.each_with_index do | res, i| %>
            <td style="text-align: center;">
                <strong>  
                  <%= (i+1) %>
                </strong> 
            </td>
            <td>
            <div class="contenant">
                <% equipeId = Pilote.find(res[0]).ecurie %>  
                <% nomPilote = Pilote.find(res[0]).nom %> 
                <%= image_tag Equipe.find(equipeId).logo, style: "width: 200px; display: block", class: "img-fluid rounded" %>
                  <div class="texte_centrer">
                    <%= nomPilote %> 
                  </div>
              </div>
            </td>
            <td style="text-align: center;">
              <strong>
                <% coteVictoire = ( number_with_precision( (i + 1) * 1.24 , precision: 2) ) %>
                <%= coteVictoire %>
              </strong>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  <br/> <hr/>
        
    <%# PDF event actif %>
    <% numGp = Event.find(@eventId).numero %>
    <%= link_to "PDF",  cotes_path(saisonId: @saisonId, divisionId: @divisionId, eventId: @eventId, numGp: numGp, format: :pdf), class:"btn btn-dark" %>

   <% end %>

<% else %>
  <br/>   <strong>Vous n'avez pas les droits...</strong>
<% end %>

