  <% if current_user.admin? %>
    <h1>Nouvelle saison</h1>

    <%= render "form", saison: @saison %>
    <br>

    <div>
      <%= link_to "Back to saisons", saisons_path %>
    </div>
  <% end %>
<% else %>
  <br/>
  <strong>Vous n'avez pas les droits...</strong>
<% end %>
